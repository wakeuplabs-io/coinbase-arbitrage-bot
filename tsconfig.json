{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "**/*.test.ts", "**/*.spec.ts", "**/*.test.js", "**/*.spec.js"]
}
